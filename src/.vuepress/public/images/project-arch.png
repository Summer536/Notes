<svg xmlns="http://www.w3.org/2000/svg" width="500" height="300" viewBox="0 0 500 300">
  <style>
    .box { fill: #4b6584; stroke: #1e3799; stroke-width: 2; }
    .arrow { stroke: #1e3799; stroke-width: 2; fill: none; }
    .text { font-family: Arial, sans-serif; font-size: 12px; fill: white; }
    .title { font-family: Arial, sans-serif; font-size: 16px; font-weight: bold; fill: white; }
  </style>
  
  <!-- 顶部模块: 图像加载 -->
  <rect class="box" x="150" y="20" width="200" height="50" rx="5" />
  <text class="title" x="180" y="45">图像加载与预处理</text>
  
  <!-- 向下箭头 -->
  <path class="arrow" d="M250 70 L250 90" marker-end="url(#arrowhead)" />
  
  <!-- 中间模块: CUDA处理内核 -->
  <rect class="box" x="100" y="90" width="300" height="80" rx="5" />
  <text class="title" x="180" y="115">CUDA处理内核</text>
  <text class="text" x="130" y="140">高斯滤波 | 边缘检测 | 直方图均衡化</text>
  
  <!-- 向下箭头 -->
  <path class="arrow" d="M250 170 L250 190" marker-end="url(#arrowhead)" />
  
  <!-- 底部模块: 用户交互界面 -->
  <rect class="box" x="150" y="190" width="200" height="50" rx="5" />
  <text class="title" x="190" y="220">用户交互界面</text>
  
  <!-- 左侧模块: 配置管理 -->
  <rect class="box" x="20" y="110" width="60" height="80" rx="5" />
  <text class="text" x="25" y="150" transform="rotate(-90, 25, 150)">配置管理</text>
  
  <!-- 右侧模块: 性能监控 -->
  <rect class="box" x="420" y="110" width="60" height="80" rx="5" />
  <text class="text" x="450" y="150" transform="rotate(90, 450, 150)">性能监控</text>
  
  <!-- 箭头定义 -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="0" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#1e3799" />
    </marker>
  </defs>
</svg> 